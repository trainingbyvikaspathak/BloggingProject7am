<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>com.controllers.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BloggerController</servlet-name>
        <servlet-class>com.controllers.BloggerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogController</servlet-name>
        <servlet-class>com.controllers.BlogController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>com.controllers.CommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestingJson</servlet-name>
        <servlet-class>com.test.TestingJson</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SmsController</servlet-name>
        <servlet-class>com.controllers.SmsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmailAttachServlet</servlet-name>
        <servlet-class>com.controllers.SendEmailAttachServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailController</servlet-name>
        <servlet-class>com.controllers.EmailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/CategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BloggerController</servlet-name>
        <url-pattern>/BloggerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogController</servlet-name>
        <url-pattern>/BlogController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/CommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestingJson</servlet-name>
        <url-pattern>/TestingJson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SmsController</servlet-name>
        <url-pattern>/SmsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmailAttachServlet</servlet-name>
        <url-pattern>/SendEmailAttachServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailController</servlet-name>
        <url-pattern>/EmailController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
